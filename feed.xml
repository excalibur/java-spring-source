---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml" />
    {% for weight in (0..20) %}
      {% for p in site.pages %}
        {% if p.weight == weight %}
      <item>
        {% if p.num == "首" %}
         <title>{{ p.contents | xml_escape }}</title>
        {% else %}
         <title>{{ p.num | xml_escape }}、{{ p.contents | xml_escape }}</title>
        {% endif %}
        <description>{{ p.content | xml_escape }}</description>
        <pubDate>{{ p.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ p.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ p.url | prepend: site.baseurl | prepend: site.url }}</guid>
      </item>
    {% endif %}
   {% endfor %}
 {% endfor %}
  </channel>
</rss>
